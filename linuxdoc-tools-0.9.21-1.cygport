inherit perl

HOMEPAGE="http://packages.debian.org/unstable/source/${PN}"
SRC_URI="http://ftp.debian.org/debian/pool/main/l/${PN}/${PN}_${PV}.tar.gz"

DIFF_EXCLUDES="guide.txt"

src_compile() {
	lndirs
	cd ${B}
	cygconf --with-installed-iso-entities
	cygmake
}

src_install() {
	cd ${B}
	USE_DESTDIR=0 cyginstall \
		perl5libdir="${D}${PERL_VENDORARCH}" \
		LINUXDOCDOC="${D}/usr/share/doc/${P}/guide"
}
